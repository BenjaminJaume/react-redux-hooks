{
  "name": "react-redux-hooks",
  "version": "3.0.0",
  "description": "Practicing Redux and Hooks with React",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node server",
    "start:dev": "nodemon server --ignore react-ui/",
    "build": "cd react-ui/ && npm install && npm run build",
    "heroku-postbuild": "cd react-ui && npm install && npm install --only=dev --no-shrinkwrap && npm run build && mv -v build/ .. && cd .. && mv build public"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "json-server": "^0.16.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mars/heroku-cra-node.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^2.0.10"
  }
}
